doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(href="//cdnjs.cloudflare.com/ajax/libs/muicss/0.9.12/css/mui.min.css", rel='stylesheet', type='text/css')
        link(href="//fonts.googleapis.com/earlyaccess/notosansjp.css", rel='stylesheet', type='text/css')
        link(href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel="stylesheet", integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin="anonymous")
        link(href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.4/css/select2.min.css", rel="stylesheet")

        link(href="/static/admin.css", rel="stylesheet")

        script(src='//cdnjs.cloudflare.com/ajax/libs/muicss/0.9.12/js/mui.min.js')
        script(src='//code.jquery.com/jquery-2.1.4.min.js')
        script(src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.4/js/select2.min.js")
        script(src="//cdnjs.cloudflare.com/ajax/libs/paginationjs/2.1.3/pagination.min.js")
        script(src="/static/admin.js")


    body

      block sidedrawer
        #sidedrawer.mui--no-user-select
          #sidedrawer-brand.mui--appbar-line-height
            span.mui--text-title
              a(href='/admin/') 管理画面

          .mui-divider
          {{ include "admin/sidemenu"}}

      block header
        header#header
          .mui-appbar.mui--appbar-line-height
            .mui-container-fluid
              a.sidedrawer-toggle.mui--visible-xs-inline-block.mui--visible-sm-inline-block.js-show-sidedrawer ☰
              a.sidedrawer-toggle.mui--hidden-xs.mui--hidden-sm.js-hide-sidedrawer ☰
              span.mui--text-title.mui--visible-xs-inline-block.mui--visible-sm-inline-block 管理画面
              span#header_title(style='font-size:20px;font-weight:bold')


        #content-wrapper
            .mui--appbar-height
            .mui-container-fluid

            {{ if .flashMessage}}
            .mui-panel(style='padding:10px;margin-top:20px;margin-bottom:0px;font-size:30px;background-color:#E3F2FD')
                {{.flashMessage}}
            {{ end }}

            block content


        footer#footer
            .mui-container-fluid
                div(style='margin-top:10px') Copyright (c) Talc, inc. All Rights Reserved.
